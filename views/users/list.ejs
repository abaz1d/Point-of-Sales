<%- include('../partials/header') %>

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        

        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0 font-size-18">Users</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Users</a></li>
                                        <li class="breadcrumb-item active">List</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-xl-4">
                            <!-- ==================Searching = -->

                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title mb-4">Pencarian Data</h4>
                                    <div class="row">
                                        <form id="form-search">
                                            
                                            <div class="row mb-3">
                                                <label for="cari_email"
                                                    class="col-sm-4 col-form-label">Email User</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="cari_email"
                                                        name="cari_email" placeholder="Tulis Email"
                                                        value="<%=query.cari_email%>">
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <label for="cari_username"
                                                    class="col-sm-4 col-form-label">Username</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="cari_username"
                                                        name="cari_username" placeholder="Tulis Username" 
                                                        value="<%=query.cari_username%>">
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <label for="cari_role"
                                                    class="col-sm-4 col-form-label">User Role</label>
                                                <div class="col-sm-8">
                                                    
                                                        <select id="cari_role" name="cari_role" class="form-select">
                                                            <option value="" disabled selected>--Pilih Role--</option>
                                                            <option value="Admin"<%=query.cari_role=="Admin" ? ' selected ' : '' %>>Admin</option>
                                                            <option value="Operator"<%=query.cari_role=="Operator" ? ' selected ' : '' %>>Operator</option>
                                                        </select>
                                                </div>
                                            </div>
                                           

                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Cari</button>

                                                <a href="/users" class="btn btn-warning">Reset</a>
                                            </div>

                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-xl-8">
                            <div class="card">
                                <div class="card-body">

                                    <h4 class="card-title mb-4">Tabel Data users</h4>
                                    <div class="table-responsive">
                                        <table class="table align-middle table-nowrap table-check">
                                            <thead class="table-light">
                                                <tr>
                                                        <th class="align-middle">NO</th>
                                                        <th class="align-middle">Email</th>
                                                        <th class="align-middle">Username</th>
                                                        <th class="align-middle">Password</th>
                                                        <th class="align-middle">Role</th>
                                                        <th class="align-middle">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% rows.forEach((item, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%=index + 1%>
                                                    </td>
                                                    <td>
                                                        <%=item.email_user%>
                                                    </td>
                                                    <td>
                                                        <%=item.username%>
                                                    </td>
                                                    <td>
                                                        <%=item.password%>
                                                    </td>
                                                    <td>
                                                        <%=item.role%>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-3">
                                                            <a href="/users/edit/<%= item.id_users %>" class="text-success"><i class="fa-solid fa-pencil"></i></a>
                                                            <a href="/users/delete/<%= item.id_users %>" class="text-danger"><i class="fa-solid fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-sm-4">
                                            <div class="text-sm-left">
                                                <a href="/users/add" class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2"><i class="fa-solid fa-plus"></i> Tambah Users </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->
                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->
        </div>
        <script>
            $(document).ready(function(){
              $('[data-toggle="popover"]').popover();
            });
            </script>
        <!-- end main content-->

        <%- include('../partials/footer') %>